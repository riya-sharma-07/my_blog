<section class="section">
	<div class="container">
		<div class="row">
			<div class="col-lg-9 col-md-12 col-sm-12 col-xs-12">
				<div class="page-wrapper">
					<div class="blog-top clearfix">
						<h4 class="pull-left">Recent Blogs <a href="#"><i class="fa fa-rss"></i></a></h4>
					</div>
					<div class="blog-list clearfix">
						<% @blogs.each do |blog| %>
							<div class="blog-box row">
								<div class="col-md-4">
									<div class="post-media">
										<a href=<%=blog_path(blog)%> title="">
											<img src=<%= blog.image_url.present? ? blog.image_url : '/assets/tech_blog_01.jpg' %> alt="" class="img-fluid">
											<div class="hovereffect"></div>
										</a>
									</div>
								</div>
								<div class="blog-meta big-meta col-md-8">
									<h4><a href=<%=blog_path(blog)%>><%= blog.title %></a></h4>
									<%= truncate((blog.body.gsub(/(<[^>]+>)/, '')), length: 250, separator: ' ') %>
									<%=link_to("Read More", blog_path(blog))%><br>
									<small class="firstsmall"><a class="bg-orange" href="tech-category-01.html" title=""><%= blog.category&.name.to_s %></a></small>
									<small><a href="tech-single.html" title=""><%=blog.created_at&.strftime("%d %^b, %Y")%></a></small>
									<small><a href="tech-author.html" title="">by <%=blog.user&.user_profile&.name%></a></small>
									<small><a href="tech-single.html" title=""><i class="fa fa-eye"></i> <%=blog.view_count%></a></small>
								</div>
							</div>
							<hr class="invis">
						<% end %>
					</div>
				</div>
			</div>
			<%= render partial: 'sidebar.html.erb' %>
		</div>
	</div>
</section>
